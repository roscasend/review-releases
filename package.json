{
  "name": "Re-View",
  "version": "1.0.2",
  "description": "Lyrics And Slide Viewer",
  "main": "index.js",
  "scripts": {
    "electron:start": "electron ./",
    "electron:pack": "electron-builder build --dir",
    "electron:build-windows": "electron-builder build --windows --publish always",
    "electron:build-mac": "electron-builder build --mac"
  },
  "dependencies": {
    "@capacitor/electron": "^2.4.4",
    "electron-is-dev": "^1.1.0",
    "electron-updater": "^4.3.5"
  },
  "devDependencies": {
    "electron": "^8.5.5",
    "electron-builder": "^22.9.1"
  },
  "keywords": [
    "capacitor",
    "electron"
  ],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "uk.co.rhythmstix.review",
    "productName": "Re-View",
    "publish": {
      "provider": "github",
      "releaseType": "release",
      "repo": "review-releases"
    },
    "files": [
      "index.js",
      "assets/*",
      "splash_assets/*",
      "capacitor.config.json",
      "app/**"
    ],
    "mac": {
      "category": "public.app-category.education",
      "target": "dmg",
      "icon": "assets/appIcon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/appIcon.ico",
      "certificateFile": "../credential/CERTIFICATE.pfx",
      "certificatePassword": "rhythmstix"
    }
  }
}
